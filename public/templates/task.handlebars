{{#each tasks}} 
  <tr>
    <form action="/fun/{{ this._id }}" method="POST">
      <td>
        <div class="checkbox">
          <label>
            <input type="checkbox" name="done" value="true" {{#if this.done}}checked="true"{{/if}}>
          </label> 
        </div> 
      </td> 
      <td> 
        {{ this.item }} 
      </td> 
      <td> 
        {{ this.points }} 
      </td>
      <td>
        <button class='deleteBtn' data-list-id="{{ this._id }}">DELETE</button>
      </td>
    </form> 
  </tr> 
{{/each}}S