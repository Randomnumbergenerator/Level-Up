{{#each lists}}
  <div class="col-sm-4 list" data-list="{{ this._id }}">
    <div class="well">
      <div id="{{ this._id }}" class="table table-hover">
        <div>
          <div id="lname">{{ this.name }}</div>
          <div class='deleteBtn' id="deletelist" data-list-id="{{ this._id }}">DELETE</div>
        </div>
        <p>
          <a class="btn btn-primary" data-toggle="collapse" href="#collapse_{{ this._id }}" aria-expanded="false" aria-controls="collapseExample">
            Show tasks
          </a>
        </p>
        <div class="collapse tasks-list" id="collapse_{{ this._id }}">
          <div class="card card-block" id="tasks_{{ this._id }}" data-list-id="{{ this._id }}"></div>
          <div>
            <div colspan="2">
              <form class="form-inline newTask" id="form" name="new_task_form" action="/api/tasks/" method="POST">
                <input name="task" type="text" placeholder="New Task..." />
                <input name="listId" type="hidden" value="{{ this._id }}">
                <select name="points" class="form-control">
                  <option>1</option>
                  <option>2</option>
                  <option>3</option>
                  <option>4</option>
                  <option>5</option>
                </select>
                <button type="submit" class="btn btn-success btn-sm">Save</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/each}}