{{#each lists}}
  <div class="col-sm-6 list" data-list="{{ this._id }}">
    <div class="well">
      <div id="{{ this._id }}" class="table table-hover">
        <div data-toggle="collapse" data-target="#accordion_{{ this._id }}" class="clickable">
          <div id="lname">{{ this.name }}</div>
          <div class='deleteBtn' id="deletelist" data-list-id="{{ this._id }}">DELETE</div>
          <div colspan="2">
            <form class="form-inline" id="form" name="new_task_form" action="/api/tasks/" method="POST">
              <input name="task" type="text" placeholder="New Task..." />
              <input name="listId" type="hidden" value="{{ this._id }}">

                <select name="points" class="form-control">
                  <option>1</option>
                  <option>2</option>
                  <option>3</option>
                  <option>4</option>
                  <option>5</option>
                </select>
                <button type="submit" class="btn btn-success btn-sm">Save</button>
            </form>
          </div>
        </div>
        <div id="accordion_{{ this._id }}" class="collapse tasks-list">
          {{!-- {{{ tasks }}} --}}
        </div>
      </div>
    </div>
  </div>
{{/each}}